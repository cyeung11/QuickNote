<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.parent">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="AppTheme.parent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="SnoozeDurationTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ColorRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
    </style>

    <style name="GreenRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/green_radio</item>
    </style>

    <style name="YellowRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/yellow_radio</item>
    </style>

    <style name="BlueRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/blue_radio</item>
    </style>

    <style name="WhiteRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/white_radio</item>
    </style>

    <style name="GreyRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/grey_radio</item>
    </style>

    <style name="RedRadioButtonStyle" parent="ColorRadioButtonStyle">
        <item name="android:button">@drawable/red_radio</item>
    </style>

</resources>
